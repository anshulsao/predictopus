
<h1 class='fx-title-gm pdh-15 bg mod-title'>Your statistics</h1>
<div class="panel panel-default fnt-neg">
  <!-- Default panel contents --> 
  <div class="panel-body">
    <p>Summary of your performance</p>
  </div>

  <!-- Table -->
  <table class="table fnt-neg table-striped">
      <tr>
          {{#leagues}}
          <th>{{name}}</th>
          {{/leagues}}
      </tr>
      {{#userStat}}
      <tr>
          <td>
              Total Score: {{points}}
          </td>
      </tr>
      {{/userStat}}
      <tr>
          <td>
              {{#leagues}}
              Rank: {{#userStat}}{{rank}}{{/userStat}}/{{#metadata}}{{total}}{{/metadata}}
              {{/leagues}}
          </td>
      </tr>
      {{#userStat}}
      <tr>
          <td>
              Accuracy: {{#metadata}}{{accuracy}}{{/metadata}}%
          </td>
      </tr>
      {{/userStat}}
  </table>
</div>

<div id='full-fixtures'>
    <h1 class='fx-title-gm pdh-15 bg mod-title'>Upcoming Games - {{nextDate}} (Local time)</h1>

    <div class='fx-stage'>
        <ul class='ls-none'>
            {{#next}}
            {{>matchSummary}}
            {{/next}}
        </ul>
    </div>
    <h1 class='fx-title-gm pdh-15 bg mod-title'>Previous Games</h1>
    <div class='fx-stage'>
        <ul class='ls-none'>
            {{#prev}}
            {{>matchSummary}}
            {{/prev}}
        </ul>
    </div>
</div>